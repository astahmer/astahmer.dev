---
import type { Project } from '@/data/projects'
import { css } from '#/styled-system/css'
import { flex } from '#/styled-system/patterns'

type Props = Project

const { title, techs, description, link } = Astro.props

const formatTechs = (values: string[]) => values.toString().replaceAll(',', ' â€¢ ')
const techString = formatTechs(techs ?? [])
---

<>
  {
    (
      <a
        class={css({
          display: 'flex',
          width: 'full',
          cursor: 'pointer',
          flexDirection: 'column',
          justifyContent: 'space-between',
          gap: '2',
          borderRadius: 'md',
          borderColor: '1px solid token(colors.neutral.700)',
          padding: '4',
          transition: 'all',
          transitionDuration: '250ms',
          transitionTimingFunction: 'cubic-bezier(.4,0,.2,1)',
          _hover: {
            transform: 'translateY(calc(token(spacing.2) * -1))',
            borderColor: 'neutral.400',
          },
          md: { flexDirection: 'row', alignItems: 'center' },
        })}
        href={link}
        target="_blank"
        rel="noreferrer"
      >
        <div
          class={css({
            display: 'flex',
            flexDirection: 'column',
            gap: '4',
            md: { flexDirection: 'row', alignItems: 'center' },
            w: 'full',
          })}
        >
          <p class={css({ color: 'neutral.100' })}>{title}</p>
          <div class={flex({ direction: 'row', flex: '1', fontSize: 'xs' })}>
            {description ? <p>{description}</p> : null}
            <p class={css({ display: 'inline-block', ml: 'auto' })}>{techString}</p>
          </div>
        </div>

        <svg
          width="18"
          height="18"
          viewBox="0 0 18 18"
          fill="none"
          class={css({
            transition: 'all',
            transitionDuration: '250ms',
            transitionTimingFunction: 'cubic-bezier(.4,0,.2,1)',
            _groupHover: {
              transform: 'translateY(token(spacing.2))',
            },
          })}
        >
          <path d="M5.25 12.75L12.75 5.25" stroke="#999999" stroke-linecap="round" stroke-linejoin="round" />
          <path d="M5.25 5.25H12.75V12.75" stroke="#999999" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </a>
    )
  }
</>
